{
  "name": "backpack.css",
  "main": "lib/backpack.css",
  "version": "2.0.0",
  "description": "A lightweight and somewhat opinionated CSS foundation that is best suited to applications ðŸŽ’.",
  "keywords": [
    "css",
    "css-library",
    "css-foundation",
    "css-reset",
    "css-normalise"
  ],
  "files": [
    "lib"
  ],
  "scripts": {
    "lint": "stylelint 'src/**/*.css'",
    "prettier:diff": "prettier --list-different '{**/*.md,src/**/*.css}'",
    "bundle": "postcss src/index.css -u postcss-import --no-map -o lib/backpack.css",
    "clean": "rimraf lib",
    "build": "yarn bundle && yarn autoprefix",
    "prebuild": "yarn clean",
    "version": "yarn build && git add .",
    "postversion": "git push && git push --tags && npm publish && yarn clean"
  },
  "browserslist": [
    "last 4 versions and > 0.5%",
    "Firefox ESR",
    "not ie < 11",
    "not op_mini all",
    "not dead"
  ],
  "repository": "git@github.com:chris-pearce/backpack.css.git",
  "author": "Chris Pearce <hello@cjpearce.com>",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^5.6.1",
    "normalize.css": "^8.0.0",
    "postcss-cli": "^6.0.0",
    "postcss-import": "^12.0.0",
    "prettier": "^1.14.3",
    "prettier-stylelint": "^0.4.2",
    "rimraf": "^2.6.2",
    "stylelint": "^9.6.0",
    "stylelint-high-performance-animation": "^1.1.1",
    "stylelint-order": "^1.0.0"
  }
}
